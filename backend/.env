
# ========================
# DATABASE CONFIGURATION
# ========================
# MongoDB Atlas (Cloud)
MONGODB_URI=mongodb+srv://jobfinder_user:123456Aa@jobfinder-cluster.uftask8.mongodb.net/job-finder?appName=jobfinder-cluster
# MongoDB Local (Alternative)
# MONGODB_URI=mongodb://localhost:27017/jobfinder_db


# ========================
# JWT CONFIGURATION
# ========================
# Secret key cho JWT (tối thiểu 32 ký tự, thay đổi trong production!)
JWT_SECRET=your_super_secret_key_here_change_in_production_12345678

# Refresh token secret (optional)
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here_12345678

# Thời gian hết hạn của token
JWT_EXPIRE=7d

# ========================
# EMAIL CONFIGURATION
# ========================
# SMTP Server (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Gmail credentials
# Note: Cần enable 2-factor authentication và tạo App Password
# Xem: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Email sender
EMAIL_FROM=JobFinder <noreply@jobfinder.com>
EMAIL_FROM_NAME=JobFinder Support

# ========================
# SERVER CONFIGURATION
# ========================
# Server port
PORT=5000

# Environment
NODE_ENV=development
# NODE_ENV=production

# ========================
# FRONTEND CONFIGURATION
# ========================
# Frontend URL (để CORS và email links)
FRONTEND_URL=http://localhost:3000

# ========================
# FILE UPLOAD CONFIGURATION
# ========================
# Thư mục lưu file upload
UPLOAD_PATH=./uploads

# Giới hạn kích thước file (bytes)
MAX_FILE_SIZE=10485760

# Loại file được phép upload
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# ========================
# LOGGING CONFIGURATION
# ========================
# Log level: error, warn, info, debug
LOG_LEVEL=debug

# ========================
# SECURITY CONFIGURATION
# ========================
# CORS origins
CORS_ORIGIN=http://localhost:3000

# Rate limiting (requests per minute)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ========================
# THIRD-PARTY SERVICES
# ========================
# Cloud storage (optional)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_REGION=us-east-1

# ========================
# DEVELOPMENT ONLY
# ========================
# Debug mode
DEBUG=false

# Seed database on startup
SEED_DB=false